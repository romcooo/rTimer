<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.TextField?>
<BorderPane fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml" >
    <top>
        <GridPane alignment="CENTER_LEFT">
            <HBox>
                <Button text="File"/>
                <Button text="Edit"/>
                <Button text="Settings"/>
            </HBox>
        </GridPane>
    </top>

    <left>
        <GridPane alignment="CENTER_LEFT" >
            <VBox>
                <Button text="left"/>
            </VBox>
        </GridPane>
    </left>

    <right>
        <GridPane alignment="CENTER_RIGHT">
            <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" >
                <Button text="+" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            </VBox>
            <VBox GridPane.rowIndex="0" GridPane.columnIndex="1" >
                <Button fx:id="start" text="START" onAction="#onStart" />
            </VBox>
        </GridPane>
    </right>

    <center>
        <GridPane alignment="CENTER">
            <TextField fx:id="timer1" text="00:00:00.0"/>
        </GridPane>

    </center>

    <bottom>

    </bottom>


</BorderPane>
