<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Tab?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ToggleButton?>
<Tab fx:id="timerTab" fx:controller="sample.TimerTabController" xmlns:fx="http://javafx.com/fxml" text="Timer" onSelectionChanged="#handleSelectionChanged">
    <BorderPane>
        <left>
            <VBox>
                <CheckBox fx:id="repeatCheckBox" text="Repeat"/>
                <HBox>
                    <CheckBox fx:id="breakCheckBox" text="Break between timers"/>
                    <TextField/>
                </HBox>
                <ToggleButton fx:id="toggleTimerFormat" text="Use dropdowns for timers instead of free text"/>
            </VBox>
        </left>
        <center>
            <VBox fx:id="timerCenterVBox1" alignment="CENTER">
                <Button fx:id="addTimerButtonTopDefault" text="+" onAction="#addTimer"/>
                <HBox fx:id="defaultTimerHBox" alignment="BASELINE_CENTER">
                    <Button text="X" onAction="#deleteTimerHBox"/>
                    <TextField fx:id="defaultTimerTextField" text="0:01:00.000" onKeyReleased="#updateTimerTotalTime"/>
                    <Button text="Start" onAction="#toggleTimer"/>
                </HBox>
                <Button text="+" onAction="#addTimer"/>
            </VBox>
        </center>
        <right>
            <VBox alignment="CENTER">
                <Button text="Start in sequence"/>
            </VBox>
        </right>
    </BorderPane>
</Tab>